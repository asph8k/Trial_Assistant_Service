	<select id="getAppList" resultMap="TotalApplierMap">
		SELECT * FROM TotalApplier
	</select>
	
	<select id="getAppContent" resultMap="TotalApplierMap">
		SELECT g.gh_name, g.join_id, g.gh_soc_num, g.gh_home_num, g.gh_phone_num, g.gh_email,
        		g.gh_job, g.gh_fax, g.gh_bank, g.gh_acc_hol, g.gh_bank_num, g.gh_srttn, g.gh_year,
        		g.gh_bsns_num, g.gh_ofc_num, g.gh_ofc_name, g.gh_acad_back, g.gh_acad_back_file,
        		g.gh_carrer, g.gh_carrer_file, g.gh_addr, g.gh_dtl_addr
		FROM TotalApplier ta INNER JOIN GH g
        	ON ta.APP_NUM_SEQ = g.APP_NUM_SEQ
		WHERE ta.join_id = #{JoinId}		
